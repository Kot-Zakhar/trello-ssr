<div class="card">
    <div class="card-body">
        <div class="card-title d-flex justify-content-between align-items-baseline">
            <a class="btn btn-light" href=<%= "/board/edit?board=" + board.id %>><h5><%= board.title %></h5></a>
            <% if (board.description) { %> 
                <button class="btn btn-light ml-auto mx-2" type="button" data-toggle="collapse" data-target="#board_description_<%= board.id %>" aria-expanded="false" aria-controls="board_description_<%= board.id %>">
                    <svg class="bi bi-card-text" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M14.5 3h-13a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                        <path fill-rule="evenodd" d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z"/>
                    </svg>
                </button>
            <% } %> 
            <a class="btn btn-light" href=<%= "/board/delete?board=" + board.id %> >
                <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                </svg>
            </a>
        </div>
        <% if (board.description) { %> 
            <div class="collapse" id="board_description_<%= board.id %>">
                <p><%= board.description %></p>
            </div>
        <% } %> 
    </div>
    <% if (board.backgroundImage) { %> 
        <img src="/<%= board.backgroundImage.path %>" class="card-img-top" alt="<%= board.backgroundImage.originalname %>">
    <% } %> 
    <ul class="list-group list-group-flush accordion">
        <% board.cards.forEach((card) => { %>
            <li class="list-group-item bg-light">
                <div class="d-flex justify-content-between align-items-baseline">
                    <a class="btn btn-light text-left flex-grow-1" href=<%= "/card/edit?card=" + card.id %>>
                        <span><%= card.title %></span>
                    </a>
                    <% if (card.description) { %> 
                        <button class="btn btn-light mx-2" type="button" data-toggle="collapse" data-target="#card_description_<%= card.id %>" aria-expanded="false" aria-controls="card_description_<%= card.id %>">
                            <svg class="bi bi-card-text" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M14.5 3h-13a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                                <path fill-rule="evenodd" d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z"/>
                            </svg>
                        </button>
                    <% } %> 
                    <% if (card.attachments.length) { %> 
                        <button class="btn btn-light mx-2" type="button" data-toggle="collapse" data-target="#card_attachments_<%= card.id %>" aria-expanded="false" aria-controls="card_attachments_<%= card.id %>">
                            <svg class="bi bi-files" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M3 2h8a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H3z"/>
                                <path d="M5 0h8a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2v-1a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1H3a2 2 0 0 1 2-2z"/>
                            </svg>
                        </button>
                    <% } %> 
                    <a class="btn btn-light" href=<%= "/card/delete?card=" + card.id %> > 
                        <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg>
                    </a>
                </div>
                <% if (card.description) { %> 
                    <div id="card_description_<%= card.id %>" class="container collapse pt-2">
                        <p><%= card.description %></p>
                    </div>
                <% } %> 
                <% if (card.attachments.length) { %>
                    <div id="card_attachments_<%= card.id %>" class="collapse list-group list-group-flush pt-2">
                    <% card.attachments.forEach((attach) => { %>
                        <a class="list-group-item bg-light" href="/<%= attach.path %>" target="_blank"><%= attach.originalname %></a>
                    <% }) %> 
                    </div>
                <% } %>
            </li>
        <% }) %>
    </ul>
    <a class="card-footer list-group-item bg-light btn btn-light" href=<%= "/card/new?board=" + board.id %>>Add card...</a>
</div>